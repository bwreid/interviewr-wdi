%h1 This is a Dummy Exams Index Page
%table
- @exams.each do |exam|
  %tr{:style=>"background-color:#{cycle('black','gray')};"}
  %td
    - if @auth.customer_id.present?
      = form_tag purchase_exam_path(exam.id) do
        = submit_tag nil, :class=>'button tiny radius alert'
    - else
      %script{:src => "https://checkout.stripe.com/v2/checkout.js",
        :class => "stripe-button",
        :'data-label' => exam.name,
        :'data-amount' => (exam.cost * 100).to_i,
        :'data-key' => Rails.configuration.stripe[:publishable_key]}
      = form_tag(purchase_exam_path(exam.id), :remote=>true) do
        / %td= exam.name
        / %td= submit_tag "Buy Now", :class=>'button tiny radius alert'


