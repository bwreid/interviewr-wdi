%h1 New Exam Page
.row
  .six.columns
  = form_for @exam do |f|
    = f.label :exam_name
    = f.text_field :name
    = f.fields_for :questions do |builder|
      = render partial: 'questions/question_fields', locals: { :f => builder }
    = link_to_add_fields "Add Question", f, :questions
    = f.submit
